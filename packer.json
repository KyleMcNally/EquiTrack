{
    "variables": {
        "from_image": "unicef/equitrack",
        "to_image": "unicef/equitrack",
        "tag": "latest"
    },
    "builders": [
        {
            "type": "docker",
            "pull": true,
            "image": "{{user `from_image`}}",
            "export_path": "equitrack-docker-image.tar"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "EquiTrack",
            "destination": "/tmp"
        },
        {
            "type": "file",
            "source": "deployment",
            "destination": "/tmp"
        },
        {
            "type": "ansible-local",
            "playbook_file": "deployment/site.yml",
            "staging_directory": "/tmp/deployment"
        }
    ],
    "post-processors": [
        [
            {
              "type": "docker-import",
              "repository": "{{user `to_image`}}",
              "tag": "{{user `tag`}}"
            }
        ]
    ]
}
